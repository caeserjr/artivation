import 'dart:convert';

import 'package:Artivation/config/config.dart';
import 'package:Artivation/models/messages.dart';
import 'package:http/http.dart' as http;

class MessagesApi {
  static Future<List<Messages>> getMessages() async {
    var uri = Uri.http(base_url, "/Messages");

    final response = await http.get(uri, headers: headers);
    if(response.statusCode == 200) {
      Map data = jsonDecode(response.body);
      List _temp = [];
      for (var piece in data["feed"]) {
        _temp.add(piece);
      }
    }else{
      return 
    }
    return ArtPiece.artMessagesFromSnapshot(_temp);
  }
}
